<Window x:Class="WeeklyTips.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WeeklyTips.WpfApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="Margin" Value="3" />
			<Setter Property="MinWidth" Value="250" />
			<Setter Property="Padding" Value="7" />
		</Style>
	</Window.Resources>
	<Grid>
		<TabControl>
			<TabItem Header="Show as Dialog">
				<StackPanel>
					<Button Name="ShowNormal"
					        Click="ShowNormal_Click"
					        Content="Show Normal" />
					<Button x:Name="ShowDialog"
					        Click="ShowDialog_Click"
					        Content="Show Dialog" />
				</StackPanel>
			</TabItem>
			<TabItem Header="Null Result">
				<StackPanel>
					<Button Name="NullResult1"
					        Click="NullResult1_Click"
					        Content="Null Result, when window not shown" />
					<Button x:Name="NullResult2"
					        Click="NullResult2_Click"
					        Content="Null result, .Show insted of .ShowDialog" />
				</StackPanel>
			</TabItem>
			<TabItem Header="Get True/False result">
				<StackPanel>
					<Button x:Name="TrueFalseResult"
					        Click="TrueFalseResult_Click"
					        Content="Result is true/false" />

					<Button x:Name="ReturnBoolValue"
					        Click="ReturnBoolValue_Click"
					        Content="Return bool value from the dialog window" />
					<TextBlock x:Name="MessageText" HorizontalAlignment="Center" />
				</StackPanel>
			</TabItem>
			<TabItem Header="Get Other Values from Dialog">
				<StackPanel>
					<Button x:Name="OtherValues"
					        Click="OtherValues_Click"
					        Content="Get other values from dialog" />
					<TextBlock x:Name="MessageText2"
										 HorizontalAlignment="Center" />
				</StackPanel>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
